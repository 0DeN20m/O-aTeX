%%%%%%%%%%%%%%%　thmtools　%%%%%%%%%%%%%%%

\declaretheoremstyle[	%定理スタイル
	spaceabove=		\baselineskip,
	headfont=		\bfseries,
%	notefont=		\bfseries,
	numberwithin=	section,
	headpunct=		\relax,
	postheadspace=	\zw,
	spacebelow=		\baselineskip
]{thmsty}
\declaretheorem[	%定理
	style=	thmsty,
	title=	定理,
%	qed=	$\square$
]{theorem}
\declaretheorem[	%定義
	style=	thmsty,
	title=	定義,
	sibling=theorem,
	%	qed=	$\square$
]{definition}
\declaretheorem[	%定義
style=	thmsty,
title=	定義,
sibling=theorem,
%	qed=	$\square$
numbered=no
]{definition*}
\declaretheorem[	%定理(番号なし)
	style=	thmsty,
	title=	定理,
%	qed=	$\square$,
	numbered=no
]{theorem*}
\declaretheorem[	%命題
	style=	thmsty,
	title=	命題,
	sibling=theorem,
%	qed=	$\square$
]{proposition}
\declaretheorem[	%補題
	style=	thmsty,
	title=	補題,
	sibling=theorem,
%	qed=	$\square$
]{lemma}
\declaretheorem[	%系
	style=thmsty,
	title=系,
	sibling=theorem,
%	qed=	$\square$
]{corollary}
\declaretheorem[	%例
	style=thmsty,
	title=例,
	sibling=theorem,
]{example}
\declaretheorem[	%証明
	style=thmsty,
	title=証明,
	numbered=no,
	qed=\qedsymbol
]{myproof}
\declaretheorem[	%問題
style=thmsty,
title=問題,
numbered=no,
]{question}
\declaretheorem[
	style=thmsty,
	title=予想
]{conjecture}
\renewenvironment{proof}{\begin{myproof}}{\end{myproof}}
\renewcommand{\qedsymbol}{$\blacksquare$} %墓石記号

